  <div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Encontre o seu melhor amigo</h1>
    <p id="main-subtitle" class="text-center">A melhor plataforma para encontrar o seu novo animalzinho</p>
    <form id="search-form" class="form-inline" action="" method="GET">
      <div class="form-group col-md-10">
        <input type="text" class="form-control" id="job" name="job" placeholder="Qual o pet vocÃª esta buscando?">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Procurar</button>
      </div>
    </form>
  </div>
  <main>
    <div id="jobs-container" class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 id="job-list-title">Veja os nossos pets!</h2>
          <ul id="job-list" class="list-group">
              {{#each pets}}
            <li class="list-group-item">
              <img src="/img/pngwing.com.png" alt="Company">
              <p>{{dataValues.Raca}}</p>
              <h2>{{dataValues.Nome}}</h2>
              <p>{{dataValues.Cidade}}</p>
              <a class="btn btn-primary">Ver Pet</a>
            </li> 
            {{/each}}       
          </ul>
        </div>
      </div>
    </div>
  </main>